@model Category
<div class="header">
    <h1><a href="/products">Products</a></h1> 
    <h1>    |    </h1>
    <h1>Categories</h1>
</div>
<div class = "container">
    <form asp-controller="Home" asp-action="SubmitCategory" method="post">
        <div class="form-group">
            <label asp-for="CategoryName"></label>
            <input asp-for="CategoryName" class="form-control">
            <span class="alert-danger" asp-validation-for="CategoryName"></span>
        </div>
        <input type="submit" class="btn btn-lg btn-primary">
    </form>
    <div class="List">
        <h1>Existing Categories</h1>
        <ul>
            @foreach(Category category in ViewBag.Categories)
            {
                <li><a href="/categories/@category.CategoryId">@category.CategoryName</a></li>
            }
        </ul>
    </div>