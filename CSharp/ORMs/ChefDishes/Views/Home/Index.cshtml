@model Chef

<div class="header">
    <h1>Chef n' Dishes!</h1>
    <a class="btn btn-lg btn-primary" href="/chefform">Create a Chef!</a>
</div>

<div class="container">
    <div class="toggle">
        <h4>Chefs</h4>
        <a href="/dishes"><h4>Dishes</h4></a>
    </div>
    <table class="table table-dark table-hover">
        <tr>
            <th>Chef Id</th>
            <th>Chef Name</th>
            <th># of Dishes</th>
        </tr>
        @foreach(Chef chef in ViewBag.AllChefs)
        {
            <tr>
                <td>@chef.ChefId</td>
                <td>@chef.FirstName @chef.LastName</td>
                <td>@chef.CreatedDishes.Count() dishes</td>
            </tr>
        }
    </table>
</div>